{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "typography": {
      "dropCap": true,
      "fontStyle": true,
      "fontWeight": true,
      "textDecoration": true,
      "textTransform": true,
      "letterSpacing": true,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "\"Inter\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Oxygen-Sans, Ubuntu, Cantarell, \"Helvetica Neue\", sans-serif",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "fontFamily": "\"Merriweather\", Georgia, Times, \"Times New Roman\", serif",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "fontFamily": "\"Fira Code\", Consolas, Monaco, \"Andale Mono\", \"Ubuntu Mono\", monospace",
          "name": "Monospace",
          "slug": "monospace"
        }
      ],
      "fontSizes": [
        {
          "size": "0.875rem",
          "fluid": {
            "min": "0.875rem",
            "max": "1rem"
          },
          "slug": "small",
          "name": "Small"
        },
        {
          "size": "1rem",
          "fluid": {
            "min": "1rem",
            "max": "1.125rem"
          },
          "slug": "medium",
          "name": "Medium"
        },
        {
          "size": "1.5rem",
          "fluid": {
            "min": "1.35rem",
            "max": "1.65rem"
          },
          "slug": "large",
          "name": "Large"
        },
        {
          "size": "2.25rem",
          "fluid": {
            "min": "2rem",
            "max": "2.5rem"
          },
          "slug": "x-large",
          "name": "Extra Large"
        },
        {
          "size": "3rem",
          "fluid": {
            "min": "2.5rem",
            "max": "3.5rem"
          },
          "slug": "xx-large",
          "name": "Huge"
        }
      ]
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "color": "#1e293b",
          "name": "Text",
          "slug": "text"
        },
        {
          "color": "#ffffff",
          "name": "Background",
          "slug": "background"
        },
        {
          "color": "#3b82f6",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#64748b",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "#f1f5f9",
          "name": "Surface",
          "slug": "surface"
        },
        {
          "color": "#ef4444",
          "name": "Accent",
          "slug": "accent"
        }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "size": "clamp(1.5rem, 5vw, 2rem)",
          "slug": "30",
          "name": "1"
        },
        {
          "size": "clamp(1.8rem, 1.8rem + ((1vw - 0.48rem) * 2.885), 3rem)",
          "slug": "40",
          "name": "2"
        },
        {
          "size": "clamp(2.68rem, 2.68rem + ((1vw - 0.48rem) * 4.087), 4.38rem)",
          "slug": "50",
          "name": "3"
        },
        {
          "size": "clamp(3.75rem, 3.75rem + ((1vw - 0.48rem) * 5.769), 6.15rem)",
          "slug": "60",
          "name": "4"
        },
        {
          "size": "clamp(5.25rem, 5.25rem + ((1vw - 0.48rem) * 8.173), 8.65rem)",
          "slug": "70",
          "name": "5"
        },
        {
          "size": "clamp(7.35rem, 7.35rem + ((1vw - 0.48rem) * 11.538), 12.15rem)",
          "slug": "80",
          "name": "6"
        }
      ],
      "blockGap": true,
      "margin": true,
      "padding": true,
      "units": [
        "px",
        "em",
        "rem",
        "vh",
        "vw",
        "%"
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "lineHeight": "1.1",
          "fontWeight": "800",
          "letterSpacing": "-0.02em"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.2",
          "fontWeight": "700",
          "letterSpacing": "-0.01em"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "1.3",
          "fontWeight": "600"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "1.25rem",
          "fontWeight": "600"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "1.125rem",
          "fontWeight": "600"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "1rem",
          "fontWeight": "600",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "textDecoration": "none"
        },
        ":hover": {
          "typography": {
            "textDecoration": "underline"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--text)",
          "text": "var(--wp--preset--color--background)"
        },
        "border": {
          "radius": "50px"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "bottom": "0.75rem",
            "left": "1.5rem",
            "right": "1.5rem"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary)"
          }
        }
      },
      "caption": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontStyle": "italic"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "top": "2.5rem",
            "bottom": "1rem"
          }
        }
      },
      "core/list": {
        "spacing": {
          "padding": {
            "left": "1.5rem"
          },
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "color": "var(--wp--preset--color--accent)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--secondary)"
        }
      },
      "core/code": {
        "color": {
          "background": "#000000"
        },
        "border": {
          "color": "var(--wp--preset--color--surface)"
        }
      },
      "core/preformatted": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--monospace)"
        },
        "color": {
          "background": "var(--wp--preset--color--surface)"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "bottom": "1rem",
            "left": "1rem",
            "right": "1rem"
          }
        },
        "border": {
          "radius": "4px",
          "width": "1px",
          "color": "var(--wp--preset--color--secondary)",
          "style": "solid"
        }
      },
      "core/pullquote": {
        "border": {
          "top": {
            "width": "2px",
            "style": "solid",
            "color": "var(--wp--preset--color--primary)"
          },
          "bottom": {
            "width": "2px",
            "style": "solid",
            "color": "var(--wp--preset--color--primary)"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.4"
        },
        "spacing": {
          "padding": {
            "top": "2rem",
            "bottom": "2rem"
          }
        }
      },
      "core/table": {
        "border": {
          "color": "var(--wp--preset--color--surface)",
          "width": "1px",
          "style": "solid"
        },
        "spacing": {
          "padding": {
            "top": "0.5rem",
            "bottom": "0.5rem",
            "left": "0.5rem",
            "right": "0.5rem"
          }
        }
      },
      "core/verse": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--secondary)",
          "fontStyle": "italic"
        },
        "color": {
          "background": "var(--wp--preset--color--surface)"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "bottom": "1rem",
            "left": "2rem",
            "right": "2rem"
          }
        }
      },
      "core/image": {
        "border": {
          "radius": "4px"
        }
      },
      "core/gallery": {
        "spacing": {
          "margin": {
            "bottom": "2rem"
          }
        }
      },
      "core/separator": {
        "color": {
          "text": "var(--wp--preset--color--surface)"
        }
      },
      "core/button": {
        "border": {
          "radius": "4px"
        }
      },
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--secondary)",
          "textTransform": "uppercase",
          "letterSpacing": "2px"
        },
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            },
            "color": {
              "text": "var(--wp--preset--color--text)"
            }
          }
        }
      },
      "core/site-tagline": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "0.9rem",
          "fontWeight": "600",
          "textTransform": "uppercase"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--text)"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--primary)"
              },
              "typography": {
                "textDecoration": "none"
              }
            }
          }
        }
      },
      "core/post-title": {
        "typography": {
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        }
      },
      "core/post-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "textTransform": "uppercase",
          "letterSpacing": "1px"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        }
      },
      "core/post-excerpt": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "core/query-pagination": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600"
        },
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      },
      "core/search": {
        "border": {
          "radius": "4px",
          "color": "var(--wp--preset--color--secondary)",
          "width": "1px",
          "style": "solid"
        },
        "spacing": {
          "padding": {
            "top": "0.5rem",
            "bottom": "0.5rem",
            "left": "0.5rem",
            "right": "0.5rem"
          }
        }
      },
      "core/calendar": {
        "color": {
          "text": "var(--wp--preset--color--text)"
        }
      },
      "core/tag-cloud": {
        "spacing": {
          "padding": {
            "top": "1rem",
            "bottom": "1rem"
          }
        }
      }
    }
  }
}